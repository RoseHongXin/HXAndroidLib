<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearItem_container">

    <LinearLayout style="@style/LinearItem_section" android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
        <ImageView android:id="@+id/_tb_iv_left" style="@style/LinearItem_icon"
                   android:layout_marginRight="@dimen/LinearItem_gapLeft" android:layout_marginEnd="@dimen/LinearItem_gapLeft"/>
        <TextView android:id="@+id/_tb_tv_left" style="@style/LinearItem_item" android:gravity="start" />
    </LinearLayout>

    <LinearLayout style="@style/LinearItem_section" android:layout_alignParentRight="true" android:layout_alignParentEnd="true">
        <TextView android:id="@+id/_tb_tv_right" style="@style/LinearItem_item" android:gravity="end"
                  android:layout_marginRight="@dimen/LinearItem_gapRight" android:layout_marginEnd="@dimen/LinearItem_gapRight" />
        <ImageView android:id="@+id/_tb_iv_right" style="@style/LinearItem_icon"  />
    </LinearLayout>

</RelativeLayout>