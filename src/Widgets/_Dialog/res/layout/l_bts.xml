<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/l_m_v"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View style="@style/line" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <TextView style="@style/dialog.bt" android:text="@string/HX_cancel" android:id="@+id/_bt_0"/>

        <View style="@style/vertical_line"/>

        <TextView style="@style/dialog.bt" android:text="@string/HX_confirm" android:id="@+id/_bt_1" />

    </LinearLayout>

</LinearLayout>
