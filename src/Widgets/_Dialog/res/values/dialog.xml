    <!--<item name="android:colorBackgroundCacheHint">@android:color/transparent</item>-->

    <dimen name="Dialog_ItemSelect_height">160dp</dimen>

    <style name="Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    <style name="Dialog.Waiting" parent="Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Dialog.WithBt" parent="Dialog">
    </style>
    <style name="Dialog.BottomUp" parent="Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog"/>
    <style name="dialog.container" parent="dialog">
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:minHeight">128dp</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="dialog.title" parent="dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/l_m_v</item>
        <item name="android:textSize">@dimen/txt_title</item>
        <item name="android:textColor">@color/txt_title</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/l_p_small</item>
        <item name="android:paddingRight">@dimen/l_p_small</item>
    </style>
    <style name="dialog.content" parent="dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/l_m_v</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/l_p_small</item>
        <item name="android:paddingRight">@dimen/l_p_small</item>
    </style>
    <style name="dialog.bt" parent="dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/bt_height</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog.img_picker_tv" parent="dialog">
        <!--<item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <!--<item name="android:layout_marginBottom">12dp</item>-->
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tv_sl_img_picker</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="dialog.address_whv" parent="dialog">
        <item name="android:layout_width">100dp</item>
        <!--<item name="android:layout_width">wrap_content</item>-->
        <!--<item name="android:layout_height">200dp</item>-->
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pb_ring_theme" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="dialog.pb_ring" parent="dialog">
        <item name="android:theme">@style/pb_ring_theme</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/pb_ar_ring</item>
    </style>

</resources>